{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    // "moduleResolution": "node",
    "esModuleInterop": true,
    "noUnusedLocals": true,
    "noImplicitAny": true,
    // "declarationDir": "lib/types",
    "outDir": "./dist",
    "declaration": true,
    "target": "esnext",
    "module": "esnext",
    "strict": true,
    "sourceMap": false,
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
